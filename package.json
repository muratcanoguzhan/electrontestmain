{
  "name": "electron-oauth-multiinstance",
  "version": "1.0.0",
  "description": "Electron app with external-browser OAuth, deep-link callback, and multi-instance behavior",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.example.electron-oauth-multiinstance",
    "productName": "OAuth Multi-Instance App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "protocols": [
      {
        "name": "MyApp Protocol",
        "schemes": ["myapp"]
      }
    ],
    "fileAssociations": [
      {
        "ext": "mydoc",
        "name": "MyDoc File",
        "description": "MyDoc Document",
        "icon": "assets/mydoc.ico"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "electron",
    "oauth",
    "pkce",
    "multi-instance",
    "file-association"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "keytar": "^7.9.0"
  }
}